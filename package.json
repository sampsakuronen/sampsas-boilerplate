{
  "name": "sampsas-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "migrate": "ts-node-dev migrations/migrate.ts",
    "start": "npm run migrate && npm run compile && node build/src/index.js",
    "watch": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "check": "gts check",
    "clean": "gts clean",
    "compile": "tsc",
    "fix": "gts fix",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "npm run check"
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/build/"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    }
  },
  "engines": {
    "node": "14"
  },
  "devDependencies": {
    "@types/express": "4.17.8",
    "@types/jest": "26.0.15",
    "@types/node": "14.14.7",
    "@types/pg": "7.14.6",
    "@types/superagent": "4.1.10",
    "@types/compression": "1.7.0",
    "@types/supertest": "2.0.10",
    "gts": "3.0.2",
    "jest": "26.6.3",
    "superagent": "6.1.0",
    "supertest": "6.0.1",
    "ts-jest": "26.4.4",
    "ts-node-dev": "1.0.0",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "body-parser": "1.19.0",
    "compression": "1.7.4",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "helmet": "4.2.0",
    "io-ts": "2.2.12",
    "pg": "8.4.2",
    "postgres-migrations": "5.1.0",
    "typera-express": "1.0.0"
  }
}
