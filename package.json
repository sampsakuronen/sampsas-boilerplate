{
  "name": "sampsas-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "npm run compile && node build/index.js",
    "test": "jest",
    "check": "gts check",
    "clean": "gts clean",
    "compile": "tsc",
    "fix": "gts fix",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "npm run check"
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/build/"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    }
  },
  "engines": {
    "node": "14"
  },
  "devDependencies": {
    "@types/express": "4.17.8",
    "@types/node": "^14.6.4",
    "@types/superagent": "4.1.10",
    "@types/supertest": "2.0.10",
    "gts": "^2.0.2",
    "jest": "26.4.2",
    "superagent": "6.1.0",
    "supertest": "4.0.2",
    "ts-jest": "26.3.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@types/jest": "26.0.13",
    "body-parser": "1.19.0",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "io-ts": "2.2.10",
    "typera-express": "0.7.2"
  }
}
